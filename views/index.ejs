<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <div style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 18px;">
      <h1><%= title %></h1>
      <a href="/new"><button>New Message</button></a>
    </div>
    <!-- <p>Welcome to <%= title %></p> -->
    <div id="message-group"><% messages.forEach((message) => { %>
      <div style="border: 1px solid black; padding: 12px;">
        <p><%= message.text  %></p>
        <p>-<%= message.user  %></p>
        <p>Added: <%= message.added %></p>
      </div>
   <% }) %></div>
  </body>
</html>
